{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:prettier/recommended",
    "overrides": [
        {
            "files": [
                "*.svelte"
            ],
            "processor": "svelte3/svelte3"
        }
    ],
    "plugins": [
        "svelte3",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [
            "svelte"
        ]
    },
    "rules": {
        "prettier/prettier": "error"
    }
}